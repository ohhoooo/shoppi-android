<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.shoppi.shoppi_android_kjh.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_home_to_product_Detail"
            app:destination="@id/navigation_product_Detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.shoppi.shoppi_android_kjh.CategoryFragment"
        android:label="CategoryFragment" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.shoppi.shoppi_android_kjh.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/navigation_product_Detail"
        android:name="com.shoppi.shoppi_android_kjh.ProductDetailFragment"
        android:label="ProductDetailFragment" />
</navigation>